<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mabatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.etd.etdservice.dao.UserDAO">
    <select id="queryUserById" resultType="com.etd.etdservice.bean.User">
		SELECT
        <include refid="allFields" />
		FROM etd_db_test.user
    </select>

    <sql id="allFields">
        `id`, <!-- 主键 -->
        `name` <!-- 名字 -->
    </sql>

</mapper>